# Server Configuration
NODE_ENV=production
PORT=3000
FRONTEND_URL=http://localhost:5173

# Database
DATABASE_URL=postgresql://user:password@postgres:5432/etsy_mockup_db

# Session
SESSION_SECRET=your-super-secret-session-key-change-this

# Google Drive OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Etsy API
ETSY_API_KEY=your-etsy-api-key
ETSY_API_SECRET=your-etsy-api-secret
ETSY_REDIRECT_URI=http://localhost:3000/auth/etsy/callback

# OpenAI API
OPENAI_API_KEY=your-openai-api-key

# Google Drive Folder (Optional - specific folder to fetch mockups from)
GOOGLE_DRIVE_FOLDER_ID=

# Etsy Shop ID (will be fetched from API after auth)
ETSY_SHOP_ID=
